block content
  div
    each field in categorical
      input(type="checkbox" name="categorical" value=`${category}` style="height:14px; width:14px;" checked) 
      div(style="display: inline-block; opacity:0.8; left:70px; width: 90%; font-size:16px; vertical-align:top; margin-bottom:10px;")
        label #{field}
        span(style="width:16px; height:16px; float: right;")
          - var buttonID = field + '-button'
          - var click = '$(this).Toggle("#' + field + '","#' + buttonID + '")'
          input(type="button" id=`${buttonID}` onclick=`${click}` style="width:16px; height:16px; border:none; background: url('assets/icons/up-chevron-button.svg'); background-size: cover;  background-repeat: no-repeat;") 
        div(id=`${field}` style="display:none;")
          each filter in filters.get(field)
            div(style="display: inline-block; left:70px; width: 200px; vertical-align:top; margin-top:5px;")
              input(type="checkbox" name=`${field}` value=`${filter}` style="height:12px; width:12px;" checked) 
              div(style="display: inline-block; left:130px; width:160px; vertical-align:top; font-size:14px; opacity:0.7")
                label #{filter}
    br(style="height:2px;")
    hr
    div#continuous
      each field in continuous
        input(type="checkbox" id=`${field}` value=`${field}` style="height:14px; width:14px;") 
        div(style="display: inline-block; left:70px; width:200px; font-size:16px; opacity:0.8; vertical-align:top; margin-bottom:10px;")
          label #{field}
        br(style="height:5px;")

