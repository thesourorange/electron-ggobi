block content
  div
    each field in categorical
      input(type="checkbox" name="categorical" value=`${category}` style="height:16px; width:16px;") 
      div(style="display: inline-block; left:70px; width: 200px; font-size:18px; vertical-align:top; margin-bottom:10px;")
        label #{field}
        br
        each filter in filters.get(field)
          div(style="display: inline-block; left:70px; width: 200px; vertical-align:top; margin-top:5px;")
            input(type="checkbox" name=`${field}` value=`${filter}` style="height:16px; width:16px;" checked) 
            div(style="display: inline-block; left:130px; width:160px; vertical-align:middle; font-size:14px; opacity:0.7")
              label #{filter}
      br(style="height:5px;")
    hr
    each field in continuous
      input(type="checkbox" name="categorical" value=`${field}` style="height:16px; width:16px;") 
      div(style="display: inline-block; left:70px; width:200px; font-size:18px; vertical-align:top; margin-bottom:10px;")
         label #{field}
      br(style="height:5px;")

